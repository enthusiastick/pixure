<!DOCTYPE html>
<html>
  <head>
    <title>Pixure</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
  </head>

  <body>
    <div class="top-bar">
      <div class="top-bar-left">
        <ul class="menu">
          <li>
            <%= link_to "Pixure", root_path %>
          </li>
        </ul>
      </div>
    </div>
    <% unless flash.empty? %>
      <% flash.each do |name, msg| %>
        <% if msg.is_a?(String) %>
          <div class="callout <%= name %>">
            <%= content_tag :div, msg %>
            <!-- <a class="close" href="#">&times;</a> -->
          </div>
        <% end %>
      <% end %>
    <% end %>
    <div class="row">
      <div class="small-12 columns">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
